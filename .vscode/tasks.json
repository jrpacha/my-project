{
    "tasks": [
        {
            "type": "shell",
            "label": "Build C/C++/fortran active project",
            "command": "/opt/homebrew/bin/g++-12",
            "args": [
                "-g",
                "-Wall",
                "-Werror",
                "-Wextra",
                "-O0",
                "${workspaceFolder}/src/*.cc",
                "-I",
                "${workspaceFolder}/include",
                "-o",
                "${workspaceFolderBasename}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
            "kind": "build",
            "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}